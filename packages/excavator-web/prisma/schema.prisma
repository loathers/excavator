generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SpadingData {
  id       Int      @id @default(autoincrement())
  project  String
  version  String
  data     Json
  dataHash String
  reports  Report[]

  @@unique([dataHash, version, project])
}

model Report {
  id        Int         @id
  playerId  Int
  createdAt DateTime
  data      SpadingData @relation(fields: [dataId], references: [id], onDelete: Cascade)
  dataId    Int
}
